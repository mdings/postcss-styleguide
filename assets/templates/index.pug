doctype html
html.styleguide
    title= options.title
    meta(name="viewport" content="width=device-width, initial-scale=1")
    head
        if options.src
          link(rel="stylesheet" href= options.src)
        if options.include
          each asset in options.include
            if asset.split('.').pop() == 'css'
              link(rel="stylesheet" href= asset)
        style
            include ../styles/gfonts.css
            include ../styles/style.css
            include ../styles/prism.css

    body.styleguide__body
        nav.styleguide__nav
            .styleguide__wrapper
                select.styleguide__section
                    each section in sections
                        option(value=section.page.url)= section.page.name
        div#styleguide__main

        if options.include
          each asset in options.include
            if asset.split('.').pop() == 'js'
              script(src=asset data-reload)
        script
            include ../scripts/prism.js
            include ../scripts/main.js
